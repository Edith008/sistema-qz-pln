@* VISTA DE LOGIN ---------- *@

@model LoginModel
@{
    ViewData["Title"] = "Home Page";
    ViewData["HideSidebar"] = true;
    //ViewData["HideNavbar"] = true;
}

<div class="login-container">
    <div class="card login-card">
        <div class="row g-0 h-100 align-items-stretch">
            <!-- Lado Izquierdo (Logo) -->
            <div class="col-md-6 login-left">
                <img src="~/images/icons/qz-03.png" class="login-logo" alt="Logo">
            </div>

            <!-- Lado Derecho (Formulario) -->
            <div class="col-md-6 login-right">
                <h2 class="text-center mb-4 text-white">Bienvenido a la Extranet</h2>
                <h5 class="text-center mb-4 text-white">Coloque sus credenciales</h5>
                <form asp-controller="Home" asp-action="Index" method="POST">
                    <div class="form-group mb-3">
                        <input asp-for="Input.Email" placeholder="Correo electrónico" class="form-control" autofocus />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>
                    <div class="form-group mb-3">
                        <input asp-for="Input.Password" placeholder="Contraseña" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>
                    <div class="form-group">
                        <span class="text-danger">
                            @Html.DisplayFor(m => m.ErrorMessage)
                        </span>
                    </div>
                    <button class="btn btn-custom w-100 mt-3">Iniciar Sesión</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
